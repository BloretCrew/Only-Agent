{
  "name": "only-agent",
  "publisher": "Bloret",
  "displayName": "Manual AI Agent",
  "description": "类似 Github Copilot 的手动 AI 助手",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "Only-Agent-sidebar",
          "title": "Manual AI Agent",
          "icon": "$(robot)"
        }
      ]
    },
    "views": {
      "Only-Agent-sidebar": [
        {
          "type": "webview",
          "id": "Only-Agent.chatView",
          "icon": "Bloret.png",
          "name": "Chat"
        }
      ]
    }
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "18.x",
    "typescript": "^5.0.0"
  }
}